{% extends '::base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                Редагування профіля:
                <div class="pull-right">
                    <a href="{{ path('cto_admin_settings_show') }}" class="btn btn-sm btn-success"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp;Назад</a>
                </div>
            </h3>
        </div>
    </div>

    <br>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="error-handling margin-bottom-15">
            {{ form_label(form.firstName) }}
            {{ form_widget(form.firstName) }}
            {{ form_errors(form.firstName) }}
        </div>
        <div class="error-handling margin-bottom-15">
            {{ form_label(form.lastName) }}
            {{ form_widget(form.lastName) }}
            {{ form_errors(form.lastName) }}
        </div>
        <div class="error-handling margin-bottom-15">
            {{ form_label(form.phone) }}
            <div class="input-group">
                <div class="input-group-addon">+38</div>
                {{ form_widget(form.phone) }}
            </div>
            {{ form_errors(form.phone) }}
        </div>
        <div class="error-handling margin-bottom-15 hide-password-label">
            {{ form_label(form.plain_password) }}
            {{ form_widget(form.plain_password) }}
            {{ form_errors(form.plain_password) }}
        </div>
        <br>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Редагувати</button>
        </div>
        <div class="hidden">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}

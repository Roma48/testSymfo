{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                {{ title }} СТО:
                <div class="pull-right">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin_ctoUsers_list') }}" class="btn btn-sm btn-default"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp;Назад</a>
                    {% elseif is_granted('ROLE_CTO') %}
                        <a href="{{ path('cto_jobs_home') }}" class="btn btn-sm btn-default"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp;Назад</a>
                    {% endif %}
                </div>
            </h3>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="error-handling margin-bottom-15">
                {{ form_label(form.firstName) }}
                {{ form_widget(form.firstName) }}
                {{ form_errors(form.firstName) }}
            </div>
            <div class="error-handling margin-bottom-15">
                {{ form_label(form.lastName) }}
                {{ form_widget(form.lastName) }}
                {{ form_errors(form.lastName) }}
            </div>
            <div class="error-handling margin-bottom-15">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="error-handling margin-bottom-15">
                {{ form_label(form.phone) }}
                <div class="input-group">
                    <div class="input-group-addon">+38</div>
                    {{ form_widget(form.phone) }}
                </div>
                {{ form_errors(form.phone) }}
            </div>
            <div class="error-handling margin-bottom-15">
                {{ form_label(form.ctoName) }}
                {{ form_widget(form.ctoName) }}
                {{ form_errors(form.ctoName) }}
            </div>
            <div class="error-handling margin-bottom-15 hide-password-label">
                {{ form_label(form.plain_password) }}
                {{ form_widget(form.plain_password) }}
                {{ form_errors(form.plain_password) }}
            </div>
            <div class="error-handling margin-bottom-15">
                {{ form_label(form.city) }}
                {{ form_widget(form.city) }}
                {{ form_errors(form.city) }}
            </div>
            <div class="error-handling margin-bottom-15">
                {{ form_label(form.blocked) }}
                {{ form_widget(form.blocked) }}
                {{ form_errors(form.blocked) }}
            </div>
            <div class="error-handling margin-bottom-15">
                {{ form_label(form.publicProfile) }}
                {{ form_widget(form.publicProfile) }}
                {{ form_errors(form.publicProfile) }}
            </div>

            <br/>
            <div class="text-center">
                <input type="submit" value="{{ title }}" class="btn btn-success">
            </div>
            <div>
                {{ form_rest(form) }}
            </div>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}


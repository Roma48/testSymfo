{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                Список СТО:
                <div class="pull-right">
                    <a href="{{ path('admin_ctoUser_create') }}" class="btn btn-sm btn-success"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Додати СТО</a>
                </div>
            </h3>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">

            <table class="table table-hover">
                <thead>
                <tr>
                    <th class="text-center">Id</th>
                    <th>Ім'я</th>
                    <th>Прізвище</th>
                    <th>Назва СТО</th>
                    <th class="text-center">Заблоковано</th>
                    <th>Дата ост. логіну</th>
                    <th>Дата реєстрації</th>
                    <th class="text-center">Дії</th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td class="text-center">{{ client.id }}</td>
                        <td>{{ client.firstName }}</td>
                        <td>{{ client.lastName }}</td>
                        <td>{{ client.ctoName }}</td>
                        <td class="text-center">
                            {% if client.blocked %}
                                Так
                            {% else %}
                                Ні
                            {% endif %}
                        </td>
                        <td>{{ client.lastLogin | date('d.m.Y H:i') }}</td>
                        <td>{{ client.createdAt | date('d.m.Y H:i') }}</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-info btn-xs"
                                   href="{{ path('cto_jobs_home', {'_switch_user': client.email }) }}">&nbsp;&nbsp;Увійти&nbsp;&nbsp;</a>
                                <a class="btn btn-warning btn-xs"
                                   href="{{ path('admin_ctoUser_edit', { 'slug': client.slug }) }}"> Редагувати </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="text-center">
                {{ knp_pagination_render(clients) }}
            </div>
        </div>
    </div>

{% endblock %}

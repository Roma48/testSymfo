{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                CTO users list:
            </h3>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">

            <table class="table table-hover">
                {#<thead>#}
                {#<tr>#}
                    {#<th class="text-center">{{ knp_pagination_sortable(clients, 'Id', 'u.id') }}</th>#}
                    {#<th>{{ knp_pagination_sortable(clients, 'First name', 'u.firstName') }}</th>#}
                    {#<th>{{ knp_pagination_sortable(clients, 'Last name', 'u.lastName') }}</th>#}
                    {#<th>{{ knp_pagination_sortable(clients, 'Last visited', 'u.lastVisitDate') }}</th>#}
                    {#<th class="text-center">Cars</th>#}
                    {#<th class="text-center">Actions</th>#}
                {#</tr>#}
                {#</thead>#}
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td class="text-center">{{ client.id }}</td>
                        <td>{{ client.firstName }}</td>
                        <td>{{ client.lastName }}</td>
                        <td>{{ client.ctoName }}</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('cto_jobs_home', {'_switch_user': client.email }) }}"> Login as </a>
                                <a class="btn btn-warning btn-xs"
                                   href="#"> Редагувати </a>
                                   {#href="{{ path('cto_client_edit', { 'slug': client.slug }) }}"> Редагувати </a>#}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="text-center">
                {#{{ knp_pagination_render(clients) }}#}
            </div>
        </div>
    </div>


{% endblock %}

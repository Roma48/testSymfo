<div class="tab-pane fade in active" id="models">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                Моделі автомобілів:
                <div class="pull-right">

                    <button class="btn btn-sm btn-success" id="add_new_model_btn"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Додати нову модель</button>
                </div>
            </h3>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
            <select name="cars" id="cars_selection" class="selectpicker" data-live-search="true" data-width="100%" data-size="15">
                {% for car in cars %}
                    <option value="{{ car.slug }}">{{ car.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row-not-padding">
            <br>
            <div id="model_result"></div>
            <div class="clearfix"></div>
        </div>
    </div>

</div>

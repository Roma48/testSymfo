<div class="tab-pane fade in active" id="current">

    <div class="row no-margin">
        <table class="table table-hover table-responsive">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Кому
                    </th>
                    <th>
                        Коли
                    </th>
                    <th>
                        Дія
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for current in currents %}
                    {% if 'now' | date('d.m.Y H:i') > current.whenSend | date('d.m.Y H:i') %}
                        <tr class="bg-warning" title="без автоматичної відправки">
                    {% else %}
                        <tr>
                    {% endif %}
                        <td style="vertical-align: middle;">
                            {{ current.id }}
                        </td>
                        <td style="vertical-align: middle;">
                            <a href="{{ path('cto_client_show', {'slug': current.clientCto.slug}) }}">{{ current.clientCto.fullName }}</a>
                        </td>
                        <td style="vertical-align: middle;">
                            {{ current.whenSend | date('d.m.Y H:i') }}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="#" class="btn btn-default" title="Скасувати">&nbsp;&nbsp;<i class="fa fa-times"></i>&nbsp;&nbsp;</a>
                                <a href="#" class="btn btn-default" title="Редагувати">&nbsp;&nbsp;<i class="fa fa-pencil"></i>&nbsp;&nbsp;</a>
                                <a href="#" class="btn btn-default" title="Копіювати">&nbsp;&nbsp;<i class="fa fa-files-o"></i>&nbsp;&nbsp;</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <br>
        <div class="text-center">
            {{ knp_pagination_render(currents) }}
        </div>
    </div>

</div>
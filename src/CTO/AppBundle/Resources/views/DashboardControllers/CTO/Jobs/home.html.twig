{% extends "::base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                Завдання:
                <div class="pull-right">
                    <a href="{{ path('cto_jobs_new') }}" class="btn btn-sm btn-success"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Нове завдання</a>
                </div>
            </h3>
            <br>
        </div>
    </div>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist" id="place-tab-sh">
        <li class="{{ tabName == 'info' ? 'active' }}"><a href="{{ path('cto_jobs_home', { 'tabName' : 'info' }) }}"><i class="fa fa-info"></i>&nbsp;&nbsp;&nbsp;Загальна інформація</a></li>
        <li class="{{ tabName == 'list' ? 'active' }}"><a href="{{ path('cto_jobs_home', { 'tabName' : 'list' }) }}"><i class="fa fa-list"></i>&nbsp;&nbsp;&nbsp;Список</a></li>
    </ul>

    {% if tabName %}
        {{ block(tabName) }}
    {% else %}
        {{ block('info') }}
    {% endif %}

{% endblock body %}

{% block info %}
    {% include "@CTOApp/DashboardControllers/CTO/Jobs/include.job.home.infoTab.html.twig" %}
{% endblock info %}

{% block list %}
    {% include "@CTOApp/DashboardControllers/CTO/Jobs/include.job.home.listTab.html.twig" %}
{% endblock list %}

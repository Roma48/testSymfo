{% block javascripts %}
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

<script>
    jQuery(function ($) {
        var client = $("#car_job_client");
        var cars = $("#car_job_car");
        var dataField = $('.date-picker-cto');
        cars.selectpicker();

        client.change(function(){
            var val = $(this).val();
            var carPath = Routing.generate('ajax_cto_cars_from_client', { "id": val });
            $.post(carPath)
                .success(function(response){
                        cars.html('');
                        if (response.cars.length > 0) {
                            $.each(response.cars, function(key, value){
                                cars.append('<option value="' + value.id + '">' + value.name + '</option>');
                            });
                        } else {
                            cars.append('<option value="" disabled="disabled">Клієнт не має автомобілів.</option>');
                        }
                        cars.selectpicker('refresh');
                    })
                .error(function(error){
                        console.log(error);
                    })
            ;
        });

        dataField.datepicker({
            format: "dd.mm.yyyy",
            orientation: "auto",
//                todayBtn: "linked",
            todayBtn: true,
            clearBtn: true,
            language: "uk",
            calendarWeeks: true,
            autoclose: true,
            todayHighlight: true
        });
    });
</script>
{% endblock javascripts %}

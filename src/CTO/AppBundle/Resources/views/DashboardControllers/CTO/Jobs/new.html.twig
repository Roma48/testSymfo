                {{ form_errors(form.price) }}
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success">Виконати</button>
            </div>
            <div class="hidden">
                {{ form_rest(form) }}
            </div>
            {{ form_end(form) }}

        </div>
    </div>


{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                Нове завдання:
                <div class="pull-right">
                    <a href="{{ path('cto_jobs_home') }}" class="btn btn-sm btn-default"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp;Назад</a>
                </div>
            </h3>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="error-handling">
                {{ form_label(form.jobCategory) }}
                {{ form_widget(form.jobCategory) }}
                {{ form_errors(form.jobCategory) }}
            </div>

            <div class="error-handling">
                {{ form_label(form.jobDate) }}
                {{ form_widget(form.jobDate) }}
                {{ form_errors(form.jobDate) }}
            </div>

            <div class="error-handling">
                {{ form_label(form.client) }}
                {{ form_widget(form.client) }}
                {{ form_errors(form.client) }}
            </div>

            <div class="error-handling">
                {{ form_label(form.car) }}
                {{ form_widget(form.car) }}
                {{ form_errors(form.car) }}
            </div>

            <div class="error-handling">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="error-handling">
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                {{ form_errors(form.price) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">Виконати</button>
            </div>
            <div class="hidden">
                {{ form_rest(form) }}
            </div>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

<script>
    jQuery(function ($) {
        var client = $("#car_job_client");
        var cars = $("#car_job_car");

        client.change(function(){
            var val = $(this).val();
            var carPath = Routing.generate('ajax_cto_cars_from_client', { "id": val });
            $.post(carPath)
                .success(function(response){
                        cars.html('');
                        if (response.cars) {
                            $.each(response.cars, function(key, value){
                                cars.append('<option value="' + value.id + '">' + value.name + '</option>');
                            });
                        } else {
                            cars.append('<option value="" disabled="disabled">no car found</option>');
                        }
                    })
                .error(function(error){
                        console.log(error);
                    })
            ;
        });

    });
</script>
{% endblock javascripts %}

{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                Деталі завдання
                <div class="pull-right">
                    <a href="#" class="btn btn-sm btn-info">Роздрукувати</a>
                    <a href="#" class="btn btn-sm btn-success">Додати рекомендацію</a>
                    <a href="#" class="btn btn-sm btn-success">Додати нагадування</a>
                    <a href="{{ path('cto_jobs_list') }}" class="btn btn-sm btn-default"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp;Назад</a>
                </div>
            </h3>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h4><u>Загальна інформація про клієнта:</u></h4>
            <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="font-bolder">Ім'я: </span><a href="{{ path('cto_client_show', {"slug": job.client.slug }) }}">{{ job.client.firstName }}</a></p>
            <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="font-bolder">Прізвище: </span>{{ job.client.lastName }}</p>
            <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="font-bolder">Кількість автомобілів: </span>{{ job.client.cars | length }}</p>
            <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="font-bolder">Дата останнього візиту: </span>{{ job.client.lastVisitDate | date("d.m.Y") }}</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h4><u>Завдання:</u></h4>
            <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="font-bolder">Дата: </span>{{ job.jobDate | date("d.m.Y") }}</p>
            <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="font-bolder">Автомобіль: </span>{{ job.car.model.name }}</p>
            <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="font-bolder">Витрачено на ремонт: </span>{{ job.totalCost | number_format(2, '.', ',') }} грн.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h4><u>По категоріям:</u></h4>

            {% for category in job.carCategories %}
                <h5>&nbsp;&nbsp;&nbsp;{{ category.jobCategory.name }}</h5>
                {% if category.jobDescriptions | length > 0 %}
                    <div class="well well-sm">
                        {% for description in category.jobDescriptions %}
                            <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="font-bolder">Опис: </span>{{ description.description }}</p>
                            <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="font-bolder">Ціна: </span>{{ description.price | number_format(2, '.', ',') }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
